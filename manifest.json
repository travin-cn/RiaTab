{
    "browser_action": {
        "default_icon": "img/icon16.png",
        "default_title": "RiaTab"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "description": "一款轻量的浏览器标签页扩展，无任何广告！",
    "icons": {
        "16": "img/icon16.png"
    },
    "manifest_version": 2,
    "name": "RiaTab",
    "permissions": [
        "tabs",
        "storage"
    ],
    "version": "1.0",
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": true
    }
}